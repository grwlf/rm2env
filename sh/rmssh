#!/bin/sh

. $(dirname $0)/rmcommon

if test "$RM_VERBOSE" = "y" ; then
  set -x
fi

if test "$1" = "--no-timeout" ; then
  NCTO=''
  shift
else
  NCTO='-w 5'
fi

if test -n "$RM_VPSSSH" ; then
  VPSRPORT=`rmvpsrport`
  exec ssh -o "ProxyCommand ssh $RM_VPSSSH nc $NCTO 127.0.0.1 $VPSRPORT" "$@"
else
  exec ssh "$@"
fi
